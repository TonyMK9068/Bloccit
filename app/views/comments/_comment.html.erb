<div class="media">
  <div class="pull-left">

       <% if can? :destroy, comment %>
      <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
      <% end %>
      </div>
  <div class="media-body">
      <h5 class="media-heading"><%= comment.body %></h5> <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      <small><%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
     
      </small>
  </div>
</div>