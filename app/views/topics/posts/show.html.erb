<div class="hero-unit">
  <div class="row">
  <div id="title"><%= markdown @post.title %></div>
  </div>
</div>


<div class ="btn-group btn-group">
    <% if can? :edit, @post %>
      <%= link_to "Edit Post", edit_topic_post_path(@topic,@post), class: 'btn btn-mini' %>
    <% end %>
  <% if can? :delete, @post %>
    <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-info btn-mini', confirm: 'Are you sure you want to delete this post?' %>
    <% end %>
</div>


<div>
  <h3><%= pluralize(@post.points, 'point') %></h3>
  <small>
    <%= pluralize(@post.up_votes, 'up vote') %>, 
    <%= pluralize(@post.down_votes, 'down vote') %>
  </small>
</div>
<%= render partial: 'favorites/favorite', locals: { topic: @topic, post: @post} %>

<div class="container">
  <div class="media post-text">
  <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <div class="pull-right media-object">
    <%= image_tag(@post.image) if @post.image? %>
    </div>
    <div class="media-body lead">
      <div class="media-heading">
      <h2> <%= image_tag(@post.user.avatar.small.url) if @post.user.avatar? %> 
      <strong><small>Post submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %> </small></strong> </h2> 
      </div>
    <%= markdown @post.body %>
    </div>
  </div>
</div>
<br>


<div class="container">
  <div class="row">
    <div class="span4">
    <small>
    <%= render partial: 'comments/comment', collection: @comments %>
    </small>
    <%= will_paginate @comments %>
    </div>

    <div class="offset2 span4">
    <% if can? :new, Comment %>
    <%= render partial: 'comments/form', locals: { comment: @a } %>
    <% end %>
    </div>
  </div>
</div>
